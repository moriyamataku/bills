<%= form_with(model: bank, local: true) do |form| %>
  <div class="title_bar" id="title_bar">
    <div id="titlebar_left">
      <h2 id="page_title"><%= bank.persisted? ? "振込先銀行の編集" : "振込先銀行の新規作成" %></h2>
    </div>
    <div id="titlebar_right">
      <%= form.submit :class => "title_button" %>
      <%= link_to '一覧へ戻る', banks_path, class: "title_button" %>
    </div>
  </div>

  <% if bank.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bank.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
      <% bank.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :bank_name, class: "col-2 col-form-label" %>
    <div class="col-4">
      <%= form.text_field :bank_name, id: :bank_name, class: "form-control" %>
    </div>
    <%= form.label :branch_name, class: "col-2 col-form-label" %>
    <div class="col-4">
      <%= form.text_field :branch_name, id: :bank_branch_name, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :account_type, class: "col-2 col-form-label" %>
    <div class="col-4">
      <%= form.text_field :account_type, id: :bank_account_type, class: "form-control" %>
    </div>
    <div class="col-6">
      <div class="row">
        <%= form.label :account_number, class: "col-4 col-form-label" %>
        <div class="col-8">
        <%= form.text_field :account_number, id: :bank_account_number, class: "form-control" %>
        </div>
        <%= form.label :account_holder, class: "col-4 col-form-label" %>
        <div class="col-8">
        <%= form.text_field :account_holder, id: :bank_account_holder, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
